@{
    ViewData["Title"] = "RuleEngine Dashboard";
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h5 class="card-title">Total Rules</h5>
                <h2 class="card-text">@ViewBag.TotalRules</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h5 class="card-title">Active Rules</h5>
                <h2 class="card-text">@ViewBag.ActiveRules</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <h5 class="card-title">Recent Executions</h5>
                <h2 class="card-text">@ViewBag.RecentExecutions.Count</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Recent Executions</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentExecutions.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Rule ID</th>
                                    <th>Status</th>
                                    <th>Duration</th>
                                    <th>Executed At</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var execution in ViewBag.RecentExecutions)
                                {
                                    <tr>
                                        <td><code>@execution.RuleId</code></td>
                                        <td>
                                            @if (execution.Success)
                                            {
                                                <span class="badge bg-success">Success</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Failed</span>
                                            }
                                        </td>
                                        <td>@execution.Duration.TotalMilliseconds.ToString("F2") ms</td>
                                        <td>@execution.ExecutedAt.ToString("MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No recent executions found.</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Rules" asp-action="Create" class="btn btn-primary">Create New Rule</a>
                    <a asp-controller="Rules" asp-action="Index" class="btn btn-secondary">View All Rules</a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5>Getting Started</h5>
            </div>
            <div class="card-body">
                <p>Welcome to RuleEngine! Here's how to get started:</p>
                <ol>
                    <li>Create your first rule</li>
                    <li>Define predicate and result expressions</li>
                    <li>Test your rule with sample data</li>
                    <li>Monitor execution history</li>
                </ol>
            </div>
        </div>
    </div>
</div>
