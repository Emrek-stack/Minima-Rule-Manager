@model RuleEngine.Mvc.ViewModels.ResultPanelViewModel

<style>
    .result-item .item-handle {
        position: absolute;
        top: 50%;
        z-index: 2;
        cursor: move;
        color: #dc9c9c;
        transform: translateY(-50%);
    }

    .result-item-sub-group {
        position: relative;
    }

    .result-item-sub-group {
        margin-left: 30px;
    }

    .result-container {
        margin-left: 15px;
    }

    .drag-placeholder {
        border: 2px dotted #eaa3a3;
    }

    .result-item-sub-group .result-container {
        margin-left: 20px;
    }

    .result-item .drag-handle {
        position: absolute;
        top: 0;
        left: 10px;
        width: 20px;
        height: 100%;
        background: #F1F2F7;
        cursor: move;
    }

    .metadataselect {
        width: 120px;
    }
    .statement-metadata{
        width:150px !important;
    }
    .parameter-item {
        margin-left: 10px;
    }

    .remove-parameter {
        float: right;
        position: absolute;
        right: -5px;
        top: -9px;
        font-size: 15px;
        cursor: move !important;
    }

        .remove-parameter i {
            color: #e2a9a9;
        }

            .remove-parameter i:hover {
                color: #fd6d6d;
                cursor: pointer;
            }
    .select2-container--open {
        background-color: #FFFEDA;
        width: auto !important;
    }
    .datatable-select .select2-results__option {
        color: #999;
        min-width: 150px !important;
        background-color: #fff;
    }
    
</style>

<h2 class="tab-title">@Model.Title</h2>

<div class="row bottom-40" data-bind="with:ResultModel" id="@Model.ResultPanelId">
    <div data-bind="sortable:{foreach: TreeItems, options: {handle: '.drag-handle', draggable: '.result-item',animation: 150,onEnd:BindPlugins,ghostClass:'drag-placeholder'}}" class="results col-lg-12">
        <div class="result result-item" data-bind="click:$parent.SetActive">
            <div data-bind="template: { name:TemplateName, data:$data }"> </div>
        </div>
    </div>
    <div class="">
        <a class="btn btn-success btn-sm crt-result-btn" data-bind="click:Add">Yeni Sonuç Oluştur</a>
    </div>
</div>