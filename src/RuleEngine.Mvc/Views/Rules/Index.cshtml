@model IEnumerable<RuleEngine.Core.Models.RuleDefinition>

@{
    ViewData["Title"] = "Rules";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Rules</h1>
    <a asp-action="Create" class="btn btn-primary">Create New Rule</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Version</th>
                <th>Tags</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <span class="badge @(item.Status == RuleEngine.Core.Models.RuleStatus.Active ? "bg-success" : 
                                              item.Status == RuleEngine.Core.Models.RuleStatus.Draft ? "bg-warning" : "bg-secondary")">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Version)
                    </td>
                    <td>
                        @if (item.Tags.Any())
                        {
                            @string.Join(", ", item.Tags)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Execute" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Execute</a>
                            <a asp-action="History" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">History</a>
                            <a asp-action="Versions" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Versions</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>No rules found</h4>
        <p>Get started by creating your first rule.</p>
        <a asp-action="Create" class="btn btn-primary">Create New Rule</a>
    </div>
}
